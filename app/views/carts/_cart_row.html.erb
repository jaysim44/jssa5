<div class="well">

  <div class="row">
    <div class="col-xs-4">

    </div>
    <div class="col-xs-2">

      <%= form_for line_item, remote: true do |f| %>

          <div class="cart-row">
            <p><%= product.name %></p>
            <p><%= number_to_currency line_item.unit_price %></p>
              <%= f.number_field :quantity, value: line_item.quantity.to_i, class: "form-control", min: 1, size: 10 %>
              <%= f.hidden_field :product_id, value: product.id %>
              <div class="btn-group">
                <%= f.submit "Update Quantity", class: "btn btn-primary" %>
                <%= link_to "Delete", line_item, { data: { confirm: "Are you sure you wish to delete the product '#{line_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
                <p class="text-right">Total Price: <span style="color: green"><%= number_to_currency line_item.total_price %></span></p>
              </div>

          </div>

      <% end %>
    </div>

  </div>
</div>