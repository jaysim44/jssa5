<div class="column">

<%= form_for line_item, remote: true do |f| %>

      <a href="<%= product_path(product) %>">
        <%= image_tag product.photo.url(:thumbnail) if product.photo? %>
        <p><%=product.name %></p>
        <p class="text-right"><%= number_to_currency product.price %></p>
        <div class="input-group">
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "See more", class: "btn btn-primary" %>
          </div>
        </div>


  <% end %>
  </div>