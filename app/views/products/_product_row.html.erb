<div class="row column text-center">
  <h4>Our Newest Products</h4>
  <hr>
</div>
<div class="row small-up-2 large-up-4">
  <% @products.each do |product| %>
    <div class="column">
      <a href="<%= product_path(product) %>">
        <%= image_tag product.photo.url(:thumbnail) if product.photo? %>
        <h4><%=product.name %></h4>
        <h5 class="text-right"><%= number_to_currency product.price %></h5>
        <a href="#" class="button expanded">Add to Cart</a>
    </div>
  <% end %>
</div>